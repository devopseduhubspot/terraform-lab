# Ansible Inventory Template
# This file is generated by Terraform and lists all servers for Ansible to manage

all:
  children:
    webservers:
      hosts:
        web-server-1:
          ansible_host: ${web_server_1_ip}
          ansible_user: ubuntu
          server_role: primary
        web-server-2:
          ansible_host: ${web_server_2_ip}
          ansible_user: ubuntu
          server_role: secondary
      vars:
        ansible_ssh_private_key_file: ansible-key.pem
        ansible_python_interpreter: /usr/bin/python3

